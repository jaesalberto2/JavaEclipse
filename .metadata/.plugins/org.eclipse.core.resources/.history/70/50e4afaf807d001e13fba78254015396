/*Ejercicio 15: Muestra los primeros 20 numeros mediante el
 * uso de la sentencia do while
 */

package repeticion;

public class NumerosDoWhile {

	public static void main(String[] args) {
		// Declaracion de variables
		int i=1;//inicializacion
		do { 
			System.out.print(i+"/t");
			i++;
			
		}while(i<=20);//Condicion
	

	}

}
