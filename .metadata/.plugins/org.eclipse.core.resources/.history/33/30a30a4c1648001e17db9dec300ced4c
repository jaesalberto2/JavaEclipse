/**
 * Ejercicio 7: Muestra Datos Personales Mediante
 * el uso de la definicion de variables
 */
package basicos;

public class DatosPersonales3 {

	public static void main(String[] args) {
		//Definicion de variables
		//tipo + nombre + valor
	String nombre = "Alberto Escareno";
	String direccion = "Av. Morelos #662";
	String telefono = "4921234567";
	String email = "jaesalberto2@gmail.com";
	String carrera = "Ing. Sistemas Comp. ";
	int edad = 21;
	double peso = 87.56;
	double altura = 1.76;
	double promedio = 87.98;
	String tipoSangre = "A+";
	//Imprime los datos del estudiante
	System.out.println("_____________________________________________");
	System.out.println("\tDatos del Estudiante");
	System.out.println("_____________________________________________");
	System.out.println("Nombre		:	"+nombre);
	System.out.println("_____________________________________________");
	System.out.println("Direccion	:	"+direccion);
	System.out.println("_____________________________________________");
	System.out.println("Telefono	:	"+telefono);
	System.out.println("_____________________________________________");
	System.out.println("Email		:	"+email);
	System.out.println("_____________________________________________");
	System.out.println("Carrera		:	"+carrera);
	System.out.println("_____________________________________________");
	System.out.println("Edad		:	"+edad+" Years");
	System.out.println("_____________________________________________");
	System.out.println("Peso		:	"+peso+" Kg");
	System.out.println("_____________________________________________");
	System.out.println("altura		:	"+altura+" m");
	System.out.println("_____________________________________________");
	System.out.println("Promedio	:	"+promedio);
	System.out.println("_____________________________________________");
	System.out.println("Tipo de sangre	:	"+tipoSangre);
	}

}
