package basicos;

public class OperadoresAritmeticos2 {

	public static void main(String[] args) {
		int x=10,y=20;
		System.out.println("X\t\tY\t\tOperador\t\tResultado");
		System.out.println(x+"\t\t"+y+" = "+(x+y));
		System.out.println(x+"\t\t"+y+" = "+(x-y));
		System.out.println(x+"\t\t"+y+" = "+(x*y));
		System.out.println(x+"\t\t"+y+" = "+((double)x/(double)y)); //casting o conversion de tipos
		System.out.println(x+"\t\t"+y+" = "+(x%y));

	}

}
